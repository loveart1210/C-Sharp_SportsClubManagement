<UserControl x:Class="SportsClubManagement.Views.TeamsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SportsClubManagement.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             x:Name="TeamsViewRoot">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="Auto"/> <!-- Create Team Card -->
            <RowDefinition Height="Auto"/> <!-- Search & Join -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Team cá»§a tÃ´i" FontSize="24" FontWeight="Bold" 
                   Foreground="#1976D2" Margin="0,0,0,20"/>

        <!-- Create Team Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Táº¡o Team Má»›i" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" Foreground="#333"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" Height="36" Margin="0,0,10,0" Background="White">
                    <TextBox Text="{Binding NewTeamName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource SearchTextBoxStyle}" Tag="TÃªn Team..."/>
                </Border>
                
                <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Height="36" Margin="0,0,10,0" Background="White">
                    <TextBox Text="{Binding NewTeamDescription, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource SearchTextBoxStyle}" Tag="MÃ´ táº£ team..."/>
                </Border>
                
                <Button Grid.Column="2" Content="Táº¡o Team" Command="{Binding CreateTeamCommand}"
                        Style="{StaticResource ModernButtonStyle}" Background="#4CAF50" Foreground="White" Height="36" Padding="15,0"/>
            </Grid>
        </StackPanel>

        <!-- Search and Join -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <!-- Search Box -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Width="300" Height="36" Margin="0,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ”" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#999"/>
                        <TextBox Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource SearchTextBoxStyle}" Tag="TÃ¬m kiáº¿m team..."/>
                    </Grid>
                </Border>

                <!-- Join Team Box -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Height="36" Margin="0,1,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding JoinTeamCode, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource SearchTextBoxStyle}" Tag="Nháº­p mÃ£ Team" Width="150"/>
                        <Button Content="Tham gia" Command="{Binding JoinTeamCommand}"
                                Style="{StaticResource ModernButtonStyle}" Background="#FF9800" Foreground="White" Height="36" Padding="12,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <TextBlock Grid.Column="1" Text="{Binding Teams.Count, StringFormat='Sá»‘ lÆ°á»£ng: {0}'}" 
                       VerticalAlignment="Center" Foreground="#666"/>
        </Grid>

        <!-- Teams List -->
        <Grid Grid.Row="3">
            <DataGrid ItemsSource="{Binding Teams}" SelectedItem="{Binding SelectedTeam}" 
                      Style="{StaticResource ModernDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Team" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Width="28" Height="28" CornerRadius="14" Background="#1976D2" Margin="0,0,8,0">
                                        <TextBlock Text="{Binding Team.Name[0]}" Foreground="White" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Team.Name}" FontWeight="Bold" Foreground="#333"/>
                                        <TextBlock Text="{Binding Team.Description}" FontSize="11" Foreground="#888" MaxWidth="350" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Vai trÃ²" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="8,2" CornerRadius="10" HorizontalAlignment="Left" Background="#E8EAF6">
                                    <TextBlock Text="{Binding MemberRole}" Foreground="#3F51B5" FontSize="11" FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="ThÃ nh viÃªn" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ‘¤" Margin="0,0,5,0" Foreground="#AAA" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding MemberCount}" Foreground="#555" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Thao tÃ¡c" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Xem chi tiáº¿t" Padding="10,4" 
                                        Background="#E1F5FE" Foreground="#0288D1" FontWeight="SemiBold"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Command="{Binding DataContext.ViewTeamCommand, ElementName=TeamsViewRoot}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
