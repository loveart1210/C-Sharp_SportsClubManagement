<UserControl x:Class="SportsClubManagement.Views.TeamsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SportsClubManagement.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             x:Name="TeamsViewRoot">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="CÃ¡c Team cá»§a tÃ´i" FontSize="24" FontWeight="Bold" 
                       Foreground="#1976D2" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Create Team Section -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" Margin="0,0,0,10" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Táº¡o Team Má»›i" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0" Margin="0,0,10,0">
                        <TextBox Text="{Binding NewTeamName, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" x:Name="TeamNameTextBox"/>
                        <TextBlock Text="Nháº­p tÃªn team..." Foreground="Gray" Padding="10,8" 
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=TeamNameTextBox, Path=Text}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    
                    <Grid Grid.Column="1" Margin="0,0,10,0">
                        <TextBox Text="{Binding NewTeamDescription, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" x:Name="TeamDescTextBox"/>
                        <TextBlock Text="Nháº­p mÃ´ táº£ (khÃ´ng báº¯t buá»™c)..." Foreground="Gray" Padding="10,8" 
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=TeamDescTextBox, Path=Text}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    
                    <Button Grid.Column="2" Content="âž• Táº¡o Team" Command="{Binding CreateTeamCommand}"
                            Padding="12,8" Background="#4CAF50" Foreground="White" 
                            FontWeight="SemiBold" Cursor="Hand"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Search & Join -->
                <RowDefinition Height="*"/>    <!-- List -->
            </Grid.RowDefinitions>

            <!-- Search and Join -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,10,0">
                    <Grid>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="30,8,8,8" BorderThickness="0" Background="Transparent"
                                 VerticalContentAlignment="Center" x:Name="SearchBox"/>
                        <TextBlock Text="ðŸ” TÃ¬m kiáº¿m team cá»§a báº¡n..." Foreground="Gray" Padding="30,8,8,8" 
                                   IsHitTestVisible="False" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Join Team Box -->
                <Border Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="200">
                            <TextBox Text="{Binding JoinTeamCode, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8" BorderThickness="0" Background="Transparent"
                                     VerticalContentAlignment="Center" x:Name="JoinBox"/>
                            <TextBlock Text="# Nháº­p mÃ£ Team Ä‘á»ƒ tham gia" Foreground="Gray" Padding="8" 
                                       IsHitTestVisible="False" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=JoinBox, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        <Button Content="Tham gia" Command="{Binding JoinTeamCommand}"
                                Background="#FF9800" Foreground="White" FontWeight="Bold"
                                Padding="15,8" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Teams List -->
            <DataGrid Grid.Row="1" ItemsSource="{Binding Teams}" AutoGenerateColumns="False" 
                      SelectedItem="{Binding SelectedTeam}" CanUserAddRows="False"
                      Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="TÃªn Team" Binding="{Binding Team.Name}" Width="200"/>
                <DataGridTextColumn Header="MÃ´ táº£" Binding="{Binding Team.Description}" Width="*"/>
                <DataGridTextColumn Header="Vai trÃ²" Binding="{Binding MemberRole}" Width="100"/>
                <DataGridTextColumn Header="ThÃ nh viÃªn" Binding="{Binding MemberCount}" Width="80"/>
                <DataGridTemplateColumn Header="HÃ nh Ä‘á»™ng" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Xem chi tiáº¿t" Padding="8,5" 
                                    Background="#4CAF50" Foreground="White" Cursor="Hand"
                                    Command="{Binding DataContext.ViewTeamCommand, ElementName=TeamsViewRoot}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        </Grid>
    </Grid>
</UserControl>
