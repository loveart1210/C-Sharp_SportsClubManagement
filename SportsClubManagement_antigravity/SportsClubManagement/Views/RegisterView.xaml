<Window x:Class="SportsClubManagement.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsClubManagement.Views"
        xmlns:vm="clr-namespace:SportsClubManagement.ViewModels"
        mc:Ignorable="d"
        Title="Đăng Ký Tài Khoản" Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.DataContext>
        <vm:RegisterViewModel />
    </Window.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="380" Margin="0,20">
                <TextBlock Text="Đăng Ký Tài Khoản" FontSize="24" FontWeight="Bold" 
                           Foreground="#1976D2" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Full Name -->
                <TextBlock Text="Họ và tên" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding FullName}" Padding="10,8" Margin="0,0,0,15" FontSize="14"/>

                <!-- BirthDate -->
                <TextBlock Text="Ngày sinh" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DatePicker SelectedDate="{Binding BirthDate}" Padding="10,8" Margin="0,0,0,15" FontSize="14" HorizontalAlignment="Stretch"/>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Email}" Padding="10,8" Margin="0,0,0,15" FontSize="14"/>

                <!-- Username -->
                <TextBlock Text="Tên đăng nhập" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Username}" Padding="10,8" Margin="0,0,0,15" FontSize="14"/>

                <!-- Password -->
                <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Padding="10,8" Margin="0,0,0,15" FontSize="14"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,0,0,15" 
                           HorizontalAlignment="Center" TextAlignment="Center"/>

                <!-- Register Button -->
                <Button Content="Đăng Ký" 
                        Command="{Binding RegisterCommand}" 
                        CommandParameter="{Binding ElementName=txtPassword}"
                        Background="#1976D2" Foreground="White"
                        Padding="10" FontSize="16" FontWeight="Bold" Cursor="Hand"
                        Height="45" Margin="0,0,0,15"/>

                <!-- Back to Login -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Đã có tài khoản? " Foreground="#666"/>
                    <TextBlock Text="Đăng nhập" Foreground="#1976D2" FontWeight="Bold"
                               Cursor="Hand" TextDecorations="Underline">
                        <TextBlock.InputBindings>
                            <MouseBinding Command="{Binding NavigateToLoginCommand}" MouseAction="LeftClick"/>
                        </TextBlock.InputBindings>
                    </TextBlock>
                </StackPanel>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
