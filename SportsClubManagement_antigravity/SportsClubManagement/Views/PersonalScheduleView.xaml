<UserControl x:Class="SportsClubManagement.Views.PersonalScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SportsClubManagement.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.DataContext>
        <vm:PersonalScheduleViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Lịch Tập Cá Nhân" FontSize="24" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,20"/>

        <TabControl Grid.Row="1">
            <!-- Subjects Tab -->
            <TabItem Header="Môn tập cá nhân">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- List Subjects -->
                    <DockPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock DockPanel.Dock="Top" Text="Danh sách môn tập" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ListBox ItemsSource="{Binding Subjects}" SelectedItem="{Binding SelectedSubject}" BorderBrush="#DDD">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray"/>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="Xóa" Command="{Binding DataContext.RemoveSubjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}" Padding="5,2" Background="#FF5252" Foreground="White" BorderThickness="0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>

                    <!-- Create Subject -->
                    <Border Grid.Column="1" Background="#F9F9F9" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Thêm môn tập mới" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Tên môn tập" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding NewSubjectName, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Mô tả" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding NewSubjectDesc}" Padding="5" Margin="0,0,0,15" Height="60"/>
                            
                            <Button Content="Thêm Môn Tập" Command="{Binding AddSubjectCommand}" 
                                    Padding="10" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Schedule/Calendar Tab -->
            <TabItem Header="Lịch tập">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sidebar Controls -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <Calendar SelectedDate="{Binding SelectedDate}" Margin="0,0,0,20"/>
                        
                        <Border Background="#F9F9F9" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Thêm buổi tập" FontWeight="Bold" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Tên buổi tập" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewSessionName, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Môn tập" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Subjects}" SelectedItem="{Binding SelectedSubject}" DisplayMemberPath="Name" Margin="0,0,0,10" Padding="5"/>
                                
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                        <TextBlock Text="Bắt đầu" FontSize="11"/>
                                        <!-- Note: Using simple binding for demo, ideally use TimePicker -->
                                        <TextBox Text="{Binding NewSessionStart, StringFormat=HH:mm}" Padding="5"/> 
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                        <TextBlock Text="Kết thúc" FontSize="11"/>
                                        <TextBox Text="{Binding NewSessionEnd, StringFormat=HH:mm}" Padding="5"/>
                                    </StackPanel>
                                </Grid>
                                
                                <TextBlock Text="Ghi chú" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewSessionNote}" Padding="5" Margin="0,0,0,10"/>
                                
                                <Button Content="Thêm Buổi Tập" Command="{Binding AddSessionCommand}" 
                                        Background="#2196F3" Foreground="White" Padding="10" 
                                        BorderThickness="0" Margin="0,0,0,10"/>

                                <Button Content="Xuất Lịch (CSV)" Command="{Binding ExportScheduleCommand}"
                                        Background="#FF9800" Foreground="White" Padding="10" BorderThickness="0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Sessions List -->
                    <DockPanel Grid.Column="1">
                        <TextBlock DockPanel.Dock="Top" Text="{Binding SelectedDate, StringFormat='Danh sách buổi tập - {0:dd/MM/yyyy}'}" 
                                   FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        
                        <DataGrid ItemsSource="{Binding Sessions}" AutoGenerateColumns="False" CanUserAddRows="False" 
                                  HeadersVisibility="Column" GridLinesVisibility="Horizontal" Background="White" BorderBrush="#EEE">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Giờ" Binding="{Binding StartTime, StringFormat=HH:mm}" Width="60" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Tên buổi tập" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Môn" Binding="{Binding SubjectId}" Width="100" IsReadOnly="True"/> <!-- Ideally convert ID to Name -->
                                <DataGridTextColumn Header="Ghi chú" Binding="{Binding Note}" Width="*" IsReadOnly="True"/>
                                <DataGridTemplateColumn Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Xóa" Command="{Binding DataContext.RemoveSessionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}" Background="Transparent" Foreground="Red" BorderThickness="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
