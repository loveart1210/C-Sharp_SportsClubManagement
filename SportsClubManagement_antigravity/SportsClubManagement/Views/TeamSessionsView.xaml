                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Káº¿t thÃºc" FontSize="11" Foreground="#666" Margin="0,0,0,3"/>
                                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Height="35">
