        </Border>

        <!-- Member Selection Modal -->
        <Grid Grid.ColumnSpan="3" Background="#7F000000" Visibility="{Binding IsMemberSelectionVisible, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="100">
            <Border Style="{StaticResource CardBorderStyle}" Width="500" Height="500" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
